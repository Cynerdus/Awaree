<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Jet</item>
        <item name="colorPrimaryDark">@color/Indigo_Dye</item>
        <item name="colorAccent">@color/Teal_Blue</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
    <style name="Awaree_50x50">
        <item name="android:src">@drawable/awaree_logo</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/Snow</item>
    </style>

    <style name="LoginButtons">
        <item name="fontFamily">@font/josefinsans_bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:background">@drawable/button_login</item>
    </style>
    <style name="ProgressBarHomework">
        <item name="color">@color/Burnt_Sienna</item>
    </style>
    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circularprogressbar</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/Jet</item>
        <item name="colorAccent">@color/Teal_Blue</item>
        <item name="colorPrimary">@color/Jet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:titleTextColor">@color/Snow</item>
        <item name="actionOverflowButtonStyle">@color/Snow</item>
        <item name="iconTint">@color/Snow</item>
        <item name="android:windowBackground">@color/Snow</item>
        <item name="actionMenuTextColor">@color/Jet</item>
    </style>
    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>

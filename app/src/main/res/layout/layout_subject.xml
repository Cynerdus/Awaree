<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:animateLayoutChanges="true"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:background="@drawable/background"
    android:elevation="8dp"
    android:id="@+id/parent_layout_sj"
    android:padding="16dp">


    <LinearLayout
        android:id="@+id/main_info"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="top"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/creditsNumber"
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="0"
            android:background="@drawable/background_small"
            android:backgroundTint="@color/Indigo_Dye"
            android:fontFamily="@font/poppinssemibold"
            android:gravity="center"
            android:text="5 CRD"
            android:textAlignment="center"
            android:textColor="@color/Snow"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subjectType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppinssemibold"
                android:gravity="bottom"
                android:scrollbars="none"
                android:text="Educatie fizica"
                android:textAlignment="textStart"
                android:textColor="@color/BottomBar"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/subjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:scrollbars="none"
                android:text="Sport"
                android:textAlignment="viewStart"
                android:textColor="@color/Jet"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dropdown_element_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_info"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/courses"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/coursesNumber"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/circlebg"
                android:backgroundTint="@color/Persian_Green"
                android:fontFamily="@font/poppinsbold"
                android:padding="4dp"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/Jet"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/courses"
                android:textAlignment="center"
                android:textColor="@color/Persian_Green"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/seminaries"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/seminariesNumber"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/circlebg"
                android:backgroundTint="@color/Teal_Blue"
                android:fontFamily="@font/poppinsbold"
                android:padding="4dp"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/Jet"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/seminaries"
                android:textAlignment="center"
                android:textColor="@color/Teal_Blue"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/labs"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/labsNumber"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/circlebg"
                android:backgroundTint="@color/Orange_Yellow_Crayola"
                android:fontFamily="@font/poppinsbold"
                android:padding="4dp"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/Jet"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/courses"
                android:textAlignment="center"
                android:textColor="@color/Orange_Yellow_Crayola"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/examType"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/dropdown_element_1"
        android:background="@drawable/background_small"
        android:backgroundTint="@color/Indigo_Dye"
        android:clickable="true"
        android:fontFamily="@font/poppinsbold"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:text="Exam"
        android:textColor="@color/Jet"
        android:textSize="32dp"
        android:visibility="gone" />

</RelativeLayout>